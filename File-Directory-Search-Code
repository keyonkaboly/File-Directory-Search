	import java.io.File;
	import java.util.Scanner;
	import java.util.Set;
	import java.util.stream.Collectors;
	import java.util.stream.Stream;
	public class testing {



		public static void main(String[] command) {	
			//System.out.println(listFilesUsingJavaIO(command[0]));
			
			Scanner input = new Scanner(System.in);
			System.out.println("\nEnter the computer's directory name: "); 
			String computerDirectory = input.nextLine();
			System.out.println("computerDirectory = "+ computerDirectory);
			
			Set<String> files = listFilesUsingJavaIO(computerDirectory);
			for(String file:files)
				System.out.println(file);
			}
		
		public static Set<String> listFilesUsingJavaIO(String dir) {
		    return Stream.of(new File(dir).listFiles())
		      .filter(file -> !file.isDirectory())
		      .map(File::getName)
		      .collect(Collectors.toSet()); 
		
		}
	}
